<Window x:Class="Ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex2"
        mc:Ignorable="d"
        Title="Ex2" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Bottom">Quem vai ser campeao?</Label>
        <Button x:Name="BT1" Click="BT1_Click" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="100" Margin="120,0,0,0" Content="Clube 1" MouseEnter="BT1_MouseEnter"></Button>
        <Button x:Name="BT2" Click="BT2_Click" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="100"  Content="Clube 2" MouseEnter="BT2_MouseEnter"></Button>
        <Button x:Name="BT3" Click="BT3_Click" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Height="50" Width="100" Margin="0,0,120,0" Content="Clube 3" MouseEnter="BT3_MouseEnter"></Button>

    </Grid>
</Window>
