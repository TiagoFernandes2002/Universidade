<Window x:Class="Classes_e_isso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classes_e_isso"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Margin="20" x:Name="LB1">
            <ListBoxItem>Item1</ListBoxItem>
            <ListBoxItem>Item2</ListBoxItem>
            <ListBoxItem>Item3</ListBoxItem>
            <ListBoxItem>Item4</ListBoxItem>
        </ListBox>
        <Button Grid.Column="0" x:Name="BTadd" Margin="20,164,20,153" Click="BTadd_Click">ADD</Button>
        <TextBox Grid.Column="0" x:Name="TBadd" Margin="20,236,20,98" RenderTransformOrigin="0.507,0.524"></TextBox>
        <Button Grid.Column="0" x:Name="BTdel" Margin="20,291,20,32" Click="BTdel_Click">DEL</Button>
        <ListBox Grid.Column="1" Margin="20" x:Name="LB2">
            
        </ListBox>
        <Button Grid.Column="1" x:Name="BTadd2" Margin="20,249,20,71" Click="BTadd2_Click">ADD2</Button>
        <TextBox Grid.Column="1" Margin="20,313,20,20"></TextBox>
    </Grid>
</Window>
